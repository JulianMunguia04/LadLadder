<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/join.css">
  <title>Lad Ladder</title>
</head>
<body>
  <nav>
    Nav
  </nav>
  <main>
    <h1>Enter Room Code</h1>
    <div class="container"> 
      <input class="room-input" id="room-code" type="text">
      <button class="join-button" id="join-button">Join</button>
    </div>
  </main>
  <footer>
  </footer>
  <script>
    const joinGameButton = document.getElementById("join-button");
    joinGameButton.addEventListener("click", ()=>{
      const room = document.getElementById("room-code").value; 
      window.location.href= `/join/${room}`;
    })
  </script>
</body>
</html>
